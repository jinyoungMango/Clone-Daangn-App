<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.project.daangn.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_notificationFragment"
            app:destination="@id/notificationFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.project.daangn.ChattingFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chatting" />
    <fragment
        android:id="@+id/nearFragment"
        android:name="com.project.daangn.NearFragment"
        android:label="NearFragment"
        tools:layout="@layout/fragment_chatting"/>
    <fragment
        android:id="@+id/communityFragment"
        android:name="com.project.daangn.CommunityFragment"
        android:label="CommunityFragment"
        tools:layout="@layout/fragment_chatting"/>
    <fragment
        android:id="@+id/mypageFragment"
        android:name="com.project.daangn.MypageFragment"
        android:label="fragment_mypage"
        tools:layout="@layout/fragment_mypage" />
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.project.daangn.NotificationFragment"
        android:label="fragment_notification"
        tools:layout="@layout/fragment_notification" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.project.daangn.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
</navigation>